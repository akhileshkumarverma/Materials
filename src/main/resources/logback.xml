<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE logback>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%c %p %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="sampleLogger" level="info" />
    <root>
        <appender-ref ref="STDOUT" />
    </root>
</configuration>