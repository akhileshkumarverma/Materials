<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE logback>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- %c classname, %p level, %msg message -->
            <pattern>%c %p %msg%n</pattern>
            <!--
            <pattern>%p %msg%n</pattern>
            -->
        </encoder>
    </appender>

    <logger name="com.kazurayam.materials.Helpers"                                level="info"/>
    <logger name="com.kazurayam.materials.model.MaterialImpl"                     level="info"/>
    <logger name="com.kazurayam.materials.model.MaterialFileName"                 level="info"/>
    <logger name="com.kazurayam.materials.model.repository.RepositoryRoot"        level="info"/>
    <logger name="com.kazurayam.materials.model.repository.RepositoryFileScanner" level="info"/>
    <logger name="com.kazurayam.materials.model.repository.RepositoryFileVisitor" level="info"/>
    <logger name="com.kazurayam.materials.model.repository.RepositoryWalker"      level="info"/>
    <logger name="com.kazurayam.materials.model.TCaseResult"                      level="info"/>
    <logger name="com.kazurayam.materials.model.TSuiteResult"                     level="info"/>
    <logger name="com.kazurayam.materials.view.IndexerByVisitorImpl"              level="info"/>



    <logger name="root" level="debug" />

    <root>
        <appender-ref ref="STDOUT" />
    </root>
</configuration>